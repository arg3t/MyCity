<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
			  android:layout_height="wrap_content">

	<ImageView
			android:layout_width="150dp"
			android:layout_height="50dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/rate_item_img"
			android:layout_weight="1"/>
	<TextView
			android:text="TextView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:id="@+id/rate_item_text" android:layout_weight="1"
			android:textSize="20sp" android:textColor="#000000"
			android:layout_gravity="center_vertical"
			android:layout_marginRight="5dp"/>
</LinearLayout>